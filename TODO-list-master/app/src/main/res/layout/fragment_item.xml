<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="42dp"

            android:layout_marginLeft="300dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="26dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.625" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="50dp"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/s" />

        <TextView
            android:id="@+id/note_item_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:id="@+id/note_item_title"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="44dp"
            android:layout_toStartOf="@+id/note_item_priority"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/note_item_description"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_item_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@+id/note_item_priority"
            android:text="Description" />

        <TextView
            android:id="@+id/note_item_repeat"
            android:layout_width="145dp"
            android:layout_height="27dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="0dp"
            android:text="" />


    </RelativeLayout>
</android.support.v7.widget.CardView>